<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enseirb.joinme.PhoneNumberSms">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/contenur"
        android:clickable="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">



        <TextView
            android:id="@+id/resultat_value"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="20dip"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="1"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="2"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="3"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button" />



        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="4" android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="5"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>

            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="6"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>

        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="7"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"

                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="8"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>

            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="9"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"/>


        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPhoneNumber"
                android:text="0"
                android:textStyle="bold"
                android:background="@drawable/calculatrice_button"

                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/MyYellow"
                android:onClick="setPhoneNumber"
                android:text="+"
                android:textSize="18sp" />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/MyRed"
                android:onClick="setPhoneNumber"

                android:text="c" />


        </LinearLayout>




        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:onClick="sendGpsData"
                android:text="Send Invitation"
                android:textStyle="bold"

                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <Button
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:onClick="changeMapLocation"
                android:text="Change Location"
                android:textStyle="bold" />





        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
